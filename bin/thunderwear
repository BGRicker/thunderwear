#!/usr/bin/env ruby

require 'thunderwear'

if File.exist?('.thunderwear_zip')
  zip = File.read('.thunderwear_zip')
else
  puts "what's your zip code?"
  zip = gets.chomp
  zip_file = File.open(".thunderwear_zip","w")
  zip_file.write zip
  zip_file.close
end

weatherer = Thunderwear::GetWeather.new(zip) 
weatherer.weather_me  
